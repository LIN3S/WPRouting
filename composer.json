{
    "name": "lin3s/wp-routing",
    "description": "Symfony style routing for WordPress",
    "keywords": ["lin3s", "wordpress", "routing", "symfony"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "LIN3S",
            "email": "info@lin3s.com",
            "homepage": "https://lin3s.com"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "symfony/yaml": "^2.3 || ^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^1.11",
        "lin3s/wp-phpspec-brigde": "^0.1",
        "phpspec/phpspec": "^2.5"
    },
    "scripts": {
        "cs": [
            "php-cs-fixer fix --config-file=.php_cs",
            "php-cs-fixer fix --config-file=.phpspec_cs"
        ],
        "test": "phpspec run"
    },
    "autoload": {
        "psr-4": {
            "LIN3S\\WPRouting\\": "src/LIN3S/WPRouting/"
        }
    }
}
